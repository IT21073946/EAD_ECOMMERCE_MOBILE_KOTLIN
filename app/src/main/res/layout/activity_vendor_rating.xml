<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Add this TextView for Vendor ID (if needed) -->
    <TextView
        android:id="@+id/vendor_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Vendor ID"
        android:layout_marginBottom="16dp" />

    <!-- Title for Rating Section -->
    <TextView
        android:id="@+id/vendor_rating_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Your Vendor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="10dp" />

    <!-- RatingBar for Vendor Ranking -->
    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0"
        android:paddingBottom="20dp" />

    <!-- Comment Section -->
    <TextView
        android:id="@+id/comment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave a Comment"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <!-- EditText for User Comment -->
    <EditText
        android:id="@+id/comment_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your comment here"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:minHeight="100dp"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <!-- Separator Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />


    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp" />


</LinearLayout>
